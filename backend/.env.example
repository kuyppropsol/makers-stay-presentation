# Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=production
FRONTEND_URL=https://yourdomain.com

# Database
DATABASE_PATH=./investors.db

# JWT Secret (Generate a strong secret!)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-immediately

# Email Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=investing@themakersstay.com
SMTP_PASS=your-app-specific-password

# Admin Configuration
ADMIN_EMAIL=admin@themakersstay.com
ADMIN_DASHBOARD_URL=https://yourdomain.com/admin

# Security
BCRYPT_ROUNDS=12
TOKEN_EXPIRY=90d
ADMIN_TOKEN_EXPIRY=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# Notification Webhooks (optional)
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url